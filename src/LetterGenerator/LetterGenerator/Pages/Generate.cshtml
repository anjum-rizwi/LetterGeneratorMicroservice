@page
@model LetterGenerator.Pages.GenerateModel
@{
    ViewData["Title"] = "Generate Letter";
}

<h2>Generate Letter</h2>

<form method="post">
    <label>Letter Type:</label>
    <select asp-for="LetterType" class="form-control">
        <option value="word">Word</option>
        <option value="pdf">PDF</option>
        <option value="prn">PRN</option>
    </select>
    <button type="submit" class="btn btn-primary">Generate</button>
</form>

@if (!string.IsNullOrEmpty(Model?.DownloadLink))
{
    <p><a href="@Model.DownloadLink" download>Download your file</a></p>
}
